                    count++;
                    <div class="row">
                        <div class="col-lg-3" id="count">
                            <p>@count</p>
                        </div>
                        <div class="col-lg-9" id="name-and-amount">
                            <p class="couple-name">@couple.BrideName e @couple.GroomName</p>
                            <p class="voute-count">@couple.VouteCount</p>
                        </div>
                    </div>
                }
            *@
            <div class="row top-title">
                <div class="col-lg-12">
                    <h4>Crie seu site e ganhe prêmios!</h4>
                </div>
            </div>
            <div class="col-lg-1"></div>
        </div>
    </div>
</div>